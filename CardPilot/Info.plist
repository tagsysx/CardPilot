<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleIconName</key>
	<string>AppIcon</string>
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>CFBundleURLName</key>
			<string>com.cardpilot.url</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>cardpilot</string>
			</array>
		</dict>
	</array>
	
	<!-- 位置权限 -->
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>需要始终访问位置以提供后台服务和WiFi网络信息</string>
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>需要在使用时访问位置和WiFi网络信息</string>
	
	<!-- 运动传感器权限 -->
	<key>NSMotionUsageDescription</key>
	<string>需要访问运动传感器来记录IMU数据</string>
	
	<!-- NFC权限 -->
	<key>NFCReaderUsageDescription</key>
	<string>需要读取NFC标签内容以获取上下文信息</string>
	
	<!-- 麦克风权限 -->
	<key>NSMicrophoneUsageDescription</key>
	<string>需要访问麦克风来录制音频数据</string>
	
	<!-- 蓝牙权限 -->
	<key>NSBluetoothAlwaysUsageDescription</key>
	<string>需要访问蓝牙来连接外部设备</string>
	<key>NSBluetoothPeripheralUsageDescription</key>
	<string>需要访问蓝牙外设来获取数据</string>
	
	<!-- 天气数据权限 -->
	<key>NSLocationTemporaryUsageDescriptionDictionary</key>
	<dict>
		<key>WeatherData</key>
		<string>需要临时访问位置来获取当前天气信息</string>
	</dict>
	
	<!-- 网络权限 -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<true/>
	</dict>
	
	<!-- 网络接口访问权限 -->
	<key>NSLocalNetworkUsageDescription</key>
	<string>需要访问本地网络信息来获取WiFi网络名称</string>
	
	<!-- WiFi信息访问权限 (iOS 14+) -->
	<key>com.apple.developer.networking.wifi-info</key>
	<true/>
	
	<!-- 文件访问权限 - 备份功能必需 -->
	<key>NSDocumentsFolderUsageDescription</key>
	<string>需要访问文档文件夹来保存和备份数据</string>
	
	<!-- 文档共享权限 - 允许在Files应用中显示 -->
	<key>UIFileSharingEnabled</key>
	<true/>
	
	<!-- 支持在文档中打开文件 -->
	<key>LSSupportsOpeningDocumentsInPlace</key>
	<true/>
	
	<!-- 支持文档类型 -->
	<key>CFBundleDocumentTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeName</key>
			<string>CardPilot Data File</string>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>LSHandlerRank</key>
			<string>Owner</string>
			<key>LSItemContentTypes</key>
			<array>
				<string>public.json</string>
				<string>public.text</string>
			</array>
		</dict>
	</array>
	
	<!-- 支持的文件类型 -->
	<key>UTExportedTypeDeclarations</key>
	<array>
		<dict>
			<key>UTTypeIdentifier</key>
			<string>com.cardpilot.data</string>
			<key>UTTypeDescription</key>
			<string>CardPilot Data File</string>
			<key>UTTypeConformsTo</key>
			<array>
				<string>public.data</string>
				<string>public.text</string>
			</array>
			<key>UTTypeTagSpecification</key>
			<dict>
				<key>public.filename-extension</key>
				<array>
					<string>json</string>
				</array>
				<key>public.mime-type</key>
				<array>
					<string>application/json</string>
				</array>
			</dict>
		</dict>
	</array>
	
	<key>NSUserActivityTypes</key>
	<array>
		<string>com.yourcompany.CardPilot.CollectDataIntent</string>
	</array>
</dict>
</plist>
